<Window x:Class="Курсовой.View.Loading"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Курсовой.View"
        xmlns:vm="clr-namespace:Курсовой.ViewModel"
        mc:Ignorable="d"
        Title="Loading" Style="{StaticResource NoWindow}" Width="300" Height="150" WindowStartupLocation="CenterScreen" >
    <Border Background="#4C757575" CornerRadius="30">
        <Border.Effect>
            <DropShadowEffect/>
        </Border.Effect>
        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding Text,Mode=TwoWay}" Foreground="Aqua" FontSize="40"/>
    </Border>
</Window>
